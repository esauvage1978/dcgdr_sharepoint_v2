{% extends 'base.html.twig' %}
{% block title %}{{ app_name }} - Page d'accueil{% endblock %}
{% block page_title %}<i class="fas fa-project-diagram"></i> {{ item.thematic.name }} > {{ item.name }}{% endblock %}

{% block breadcrumb %}
	{% import "rubric/_btn_actions.html.twig" as actions %}
	{{ actions.show(
        'show',
        item
    ) }}
{% endblock %}


{% block page_content %}
    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {% import "macros/default.html.twig" as dft %}
        {{ dft.no_connexion() }}
    {% else %}
        {% import "macros/underthematic.html.twig" as utmt %}
        {{ utmt.anchors(items) }}

        {% import "macros/underrubric.html.twig" as urbc %}
        {{ urbc.vignettes_by_underthematic(items,'underrubric_show','underthematic_show') }}
    {% endif %}
{% endblock %}



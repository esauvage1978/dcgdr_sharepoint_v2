{% if item is defined %}
    {% embed '@AdminLTE/Widgets/box-widget.html.twig' with {
        'boxtype' : ''
    }%}

        {% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
        {% import "macros/delele.html.twig" as del %}
        {% block box_before %}{{ form_start(form) }}{% endblock %}
        {% block box_title %}{{ item.ref }}<span class="text-bold"> {{ item.name }}</span>{% endblock %}
        {% block box_body %}
            <div class="row">
                <div class=" col-6">
                    <div class="form-group row">
                        {{ form_label(form.name,'', { 'label_attr': {'class':'col-sm-4 col-form-label' }}) }}
                        <div class="col">
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.ref,'', { 'label_attr': {'class':'col-sm-4 col-form-label' }}) }}
                        <div class="col-2">
                            {{ form_errors(form.ref) }}
                            {{ form_widget(form.ref) }}
                        </div>
                    </div>
                </div>
                <div class="offset-1 col-2 ">
                    <div class="form-group row">
                        <label class="col-10 col-form-label" for="{{ form.isEnable.vars.id }}">
                            Afficher
                        </label>
                        <div class="col mt-1 ">
                            {{ form_widget(form.isEnable) }}
                        </div>


                    </div>

                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.content,'', { 'label_attr': {'class':'col-sm-2 col-form-label' }}) }}
                <div class="col">
                    {{ form_errors(form.content) }}
                    {{ form_widget(form.content) }}
                </div>
            </div>
        {% endblock %}
        {% block box_footer %}
            <div class="row">
                <div class="col-6">
                    <div class="text-left">
                        {{ btn.link_button(
                            'Liste',
                            path(route_list),
                            'fa fa-list',
                            'secondary',
                            'secondary'
                        ) }}
                    </div>
                </div>
                <div class="col-6">
                    <div class="text-right">
                        {% if item.id is not null %}
                            {{ del.delete_btn('show') }}
                            {{ btn.link_button(
                                'Consulter',
                                path(route_show,{id:item.id}),
                                'fa fa-eye',
                                'primary',
                                'primary'
                            ) }}
                        {% endif %}
                        {{ btn.action_button(
                            'Enregistrer',
                            'submit',
                            'fa fa-save',
                            'success',
                            'success'
                        ) }}
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block box_after %}
            {{ form_end(form)}}
            {% if item.id is not null %}
            {{ del.delete_form(route_del,item.id, 'show') }}
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endif %}
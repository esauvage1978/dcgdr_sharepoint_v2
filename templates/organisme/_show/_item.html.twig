{% if item is defined %}

    {% embed 'widgets/card-widget.html.twig' %}
        {% block card_title %}{{ item.ref }}<span class="text-bold"> {{ item.name }}</span>{% endblock %}
        {% block card_body %}
            <div class="row">
                <div class="col-md-4 col-lg-2 ">
                    {% embed 'widgets/card-widget.html.twig' %}
                        {% block card_class %}border{% endblock %}
                        {% block card_body_class %}text-center {{ item.isEnable ?'text-success':'text-warning' }}{% endblock %}
                        {% block card_body %}
                            <i class="fas fa-{{ item.isEnable ?'check':'times' }} fa-3x"></i><br>
                            Utilisable
                        {% endblock %}
                    {% endembed %}
                </div>
                <div class="col-md-8 col-lg-5 ">
                    {% embed 'widgets/card-widget.html.twig' %}
                        {% block card_title %}Utilisateurs{% endblock %}
                        {% block card_body %}
                            {% import "macros/user.html.twig" as usr %}
                            {{ usr.views(item.users) }}
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ item.content | raw }}
                </div>
            </div>
        {% endblock %}
        {% block card_after %}
            {% import "macros/delele.html.twig" as del %}
            {{ del.delete_form(route_del,item.id, 'show') }}
        {% endblock %}
    {% endembed %}

{% endif %}
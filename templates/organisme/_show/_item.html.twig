{% if item is defined %}

    <div class="row justify-content-center">
        <div class="{{ col_1_2 }}">
            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_class %} card-primary card-outline{% endblock %}
                {% block card_body_class %} box-profile{% endblock %}
                {% block card_body %}
                    <h3 class="profile-username text-center">{{ item.fullName }}</h3>

                    <small class="float-right">
                        {% if item.isEnable %}
                            <span class="text-success">Visible</span>
                        {% else %}
                            <span class="text-danger">Masqu√©e</span>
                        {% endif %}
                    </small>
                {% endblock %}
            {% endembed %}

            {% if item.content %}
                {% embed 'widgets/card-widget.html.twig' %}
                    {% block card_body %}
                        {{ item.content |raw }}
                    {% endblock %}
                {% endembed %}
            {% endif %}

            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_title %}Utilisateurs{% endblock %}
                {% block card_body %}
                    {% import "macros/user.html.twig" as usr %}
                    {{ usr.vignettes(item.users) }}
                {% endblock %}
            {% endembed %}

            {% embed 'widgets/card-widget.html.twig' %}
                {% block card_title %}Corbeilles{% endblock %}
                {% block card_body %}
                    {% import "macros/corbeille.html.twig" as cor %}
                    {{ cor.views(item.corbeilles) }}
                {% endblock %}
            {% endembed %}
        </div>
    </div>


{% endif %}
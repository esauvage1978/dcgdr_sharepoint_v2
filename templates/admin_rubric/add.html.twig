function formatState(state) {
if (! state.id) {
return state.text;
}

var baseUrl = '{{ absolute_url( asset('')) }}' + state.text;
return $('<span><img src="' + baseUrl + '" class="img-flag" style="width:200px" alt=""/> ' + + '</span>');

}

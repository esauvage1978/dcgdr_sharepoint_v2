{% if item is defined %}


    {% import "macros/delele.html.twig" as del %}
    {% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
    {% import "macros/submit.html.twig" as sub %}
    {{ form_start(form) }}
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-8 col-xl-6">
            <div class="card ">

                <div class="card-body">
                    <div class="form-group row">
                        {{ form_label(form.name,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
                        <div class="col">
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.email,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
                        <div class="col">
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.phone,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
                        <div class="col">
                            {{ form_errors(form.phone) }}
                            {{ form_widget(form.phone) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="{{ form.isEnable.vars.id }}">
                            Afficher
                        </label>
                        <div class="col mt-1">
                            {{ form_row(form.isEnable) }}
                        </div>
                    </div>
                    {{ form_row(form.content) }}


                </div>
            </div>

        </div>
        <div class="col-sm-12 col-md-4">
            <div class="card border border-info">
                <div class="card-body text-center">
                    {{ form_row(form.subscription) }}
                </div>
            </div>
            <div class="card ">
                <div class="card-footer">
                    Habillitations
                </div>
                <div class="card-body select2-primary">
                    {{ form_widget(form.roles) }}
                </div>
            </div>

            <div class="card ">
                <div class="card-footer">
                    Organismes
                </div>
                <div class="card-body select2-primary">
                </div>
            </div>
        </div>

        <div class="d-none">
            {{ sub.submit_btn_hidden() }}
            {{ form_rest(form) }}
        </div>
    </div>
    {{ form_end(form) }}
    {% if item.id is not null %}
        {{ del.delete_form(route_del,item.id, 'show') }}
    {% endif %}
{% endif %}
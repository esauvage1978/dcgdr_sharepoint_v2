{% if item %}
    {% embed 'widgets/card-widget.html.twig' %}
        {% import "macros/widgets.html.twig" as widgets %}
        {% block card_class %}h-100 card-light  card-outline shadow{% endblock %}
        {% block card_title %} {{ widgets.icon('backpack') }} {{ item.name }}{% endblock %}
        {% block card_tools %}
            {{  widgets.badge_state(item.currentPlace)  }}
            <small class="text-muted">{{ item.updateAt  | date('d/m/Y H:i:s') }}</small>
        {% endblock %}

        {% block card_body %}


                {% if item.content %}

                        <small class="text-muted ">
                            {{ item.content | raw }}
                        </small>

                {% endif %}

        {% endblock %}

        {% block card_footer %}
            <small class="text-muted">créé par <strong>{{ item.owner.name }}</strong></small>
        {% endblock %}
    {% endembed %}
{% endif %}
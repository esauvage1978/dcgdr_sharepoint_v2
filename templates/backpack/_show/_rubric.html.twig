{% embed 'widgets/card-widget.html.twig' %}
	{% block card_class %}flat
	{% endblock %}
	{% block card_body_class %}p-0
	{% endblock %}

	{% block card_body %}
		{% import "macros/widgets.html.twig" as widgets %}

		<div class="form-group row m-2 js-createTip-wrapper">
			<a href="{{ path('rubric_show',{id:item.underRubric.rubric.id})}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
				<span class='mr-5 text-p-dark2'>
					<i class="fas fa-project-diagram"></i>
					{{ item.underRubric.rubric.name | raw}}
				</span>
			</a>

			<a href="{{ path('underrubric_show',{id:item.underRubric.id})}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">

				<span class='mr-5 ml-5 text-p-dark2'>
					<i class="fas fa-project-diagram"></i>
					{{ item.underRubric.name | raw}}

				</span>
			</a>
			<div class="createTip ">
				<div class="createTip__title">
					Rubrique / Sous-rubrique
				</div>
				<p>
					Le porte document est associé à une rubrique et une sous rubrique
				</p>
			</div>
		</div>
	{% endblock %}
{% endembed %}

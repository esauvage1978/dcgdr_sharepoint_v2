{% embed 'widgets/button-widget.html.twig' %}
    {% block btn_group %}
        {% import "macros/delele.html.twig" as del %}
        {% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
        {{ btn.link_button(
            '',
            path(route_list),
            'fa fa-list',
            'secondary',
            'secondary'
        ) }}
        {% if is_granted('ROLE_GESTIONNAIRE') %}
            {{ del.delete_btn('','show') }}
            {{ btn.link_button(
                '',
                path(route_edit,{id:item.id}),
                'fa fa-edit',
                'purple',
                'primary'
            ) }}
        {% endif %}
        {{ del.delete_form(route_del,item.id, 'show') }}
    {% endblock %}
{% endembed %}